{
    "ignoreTestFiles": [
        "**/__snapshots__/*",
        "**/__image_snapshots__/*"
    ],
    "video": false,
    "retries": {
        "runMode": 0,
        "openMode": 0
    },
    "env": {
        "cypress-plugin-snapshots": {
            "screenshotConfig": {
                "blackout": [],
                "capture": "fullPage",
                "clip": null,
                "disableTimersAndAnimations": true,
                "log": false,
                "scale": false,
                "timeout": 30000
            },
            "imageConfig": {
                "createDiffImage": true,
                "threshold": 1,
                "thresholdType": "pixel"
            }
        }
    }
}
